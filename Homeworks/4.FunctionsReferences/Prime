#include <iostream>
#include <vector>
#include <utility>

bool prime(int number) {
        bool isbool = true;
        int a;
        if(number == 1)
        {
                isbool = false;
                return isbool;
        }
        else 
        {
                for (int i = 2; i < number; i++) 
                {
                        number% i == 0 ? isbool = false : a = 0;
                }
                return isbool;
        }
        
        }

int main()
{
        for (int i = 1; i <= 100; i++) {
                std::cout<< i<< ". " << std::boolalpha << prime(i)<<std::endl;
        }
}
